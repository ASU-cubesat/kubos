{
  "name": "stm32f407-disco-gcc",
  "version": "0.0.7",
  "inherits": {
    "kubos-arm-none-eabi-gcc": "openkosmosorg/target-kubos-arm-none-eabi-gcc#~0.0.1"
  },
  "description": "KubOS build target for the stm32f407-discovery development board.",
  "author": "Marshall Culpepper <marshall@kubos.co>",
  "homepage": "https://github.com/openkosmosorg/target-stm32f407-disco-gcc",
  "licenses": [
    {
      "url": "https://spdx.org/licenses/Apache-2.0",
      "type": "Apache-2.0"
    }
  ],
  "keywords": [
    "stm32f407-disco",
    "gcc"
  ],
  "similarTo": [
    "stm32f407-disco",
    "f407vg",
    "f407",
    "discovery",
    "stm32f407vgt6",
    "stm32f407vg",
    "stm32f407xg",
    "stm32f407",
    "stm32f4",
    "stm32",
    "st",
    "cortex-m4",
    "armv7-m"
  ],
  "config": {
    "cmsis": {
      "nvic": {
        "ram_vector_address": "0x20000000",
        "flash_vector_address": "0x08000000",
        "user_irq_offset": 16,
        "user_irq_number": 82
      }
    },
    "uvisor": {
      "present": 0
    },
    "hardware": {
      "externalClock": "8000000",
      "uartCount": "6",
      "i2cCount": "2",
      "spiCount": "3",
      "console": {
        "uart": "K_UART6",
        "baudRate": "115200"
      },
      "defaults": {
        "i2c": "K_I2C1",
        "spi": "K_SPI1"
      },
      "i2c": {
        "i2c1": {
          "scl": {
            "pin": "GPIO_PIN_8",
            "mode": "GPIO_MODE_AF_PP",
            "pullup": "GPIO_NOPULL",
            "speed": "GPIO_SPEED_MEDIUM"
          },
          "sda": {
            "pin": "GPIO_PIN_7",
            "mode": "GPIO_MODE_AF_OD",
            "pullup": "GPIO_PULLUP",
            "speed": "GPIO_SPEED_MEDIUM"
          },
          "alt": "GPIO_AF4_I2C1"
        },
        "i2c2": {
          "scl": {
            "pin": "GPIO_PIN_10",
            "mode": "GPIO_MODE_AF_PP",
            "pullup": "GPIO_NOPULL",
            "speed": "GPIO_SPEED_MEDIUM"
          },
          "sda": {
            "pin": "GPIO_PIN_11",
            "mode": "GPIO_MODE_AF_OD",
            "pullup": "GPIO_PULLUP",
            "speed": "GPIO_SPEED_MEDIUM"
          },
          "alt": "GPIO_AF4_I2C2"
        }
      },
      "spi": {
        "count": 3,
        "defaults": {
          "bus": "K_I2C1"
        },
        "spi1": {
          "mosi": "GPIO_PIN_7",
          "miso": "GPIO_PIN_6",
          "sck": "GPIO_PIN_5",
          "port": "GPIOA",
          "alt": "GPIO_AF5_SPI1"
        },
        "spi2": {
            "mosi": "GPIO_PIN_15",
            "miso": "GPIO_PIN_14",
            "sck": "GPIO_PIN_13",
            "port": "GPIOB",
            "alt": "GPIO_AF5_SPI2"
        },
        "spi3": {
            "mosi": "GPIO_PIN_12",
            "miso": "GPIO_PIN_11",
            "sck": "GPIO_PIN_10",
            "port": "GPIOC",
            "alt": "GPIO_AF6_SPI3"
        }
      },
      "pins": {
        "LED1": "PD12",
        "LED2": "PD13",
        "LED3": "PD14",
        "LED4": "PD15",
        "USER_BUTTON": "PA0",
        "UART1_TX": "PA9",
        "UART1_RX": "PA10",
        "UART2_TX": "PA2",
        "UART2_RX": "PA3",
        "UART3_TX": "PA10",
        "UART3_RX": "PA11",
        "UART4_TX": "PA0",
        "UART4_RX": "PA1",
        "UART5_TX": "PC12",
        "UART5_RX": "PD2",
        "UART6_TX": "PC6",
        "UART6_RX": "PC7",
        "USBTX": "PA2",
        "USBRX": "PA3",
        "SPI1_CS": "PA4",
        "SPI2_CS": "PB12",
        "SPI3_CS": "PC9",
        "PWM_OUT": "PB3"
      },
      "test-pins": {
        "spi": {
          "mosi": "SPI1_MOSI",
          "miso": "SPI1_MISO",
          "sclk": "SPI1_SCK",
          "ssel": "SPI1_CS"
        },
        "i2c": {
          "sda": "I2C_SDA",
          "scl": "I2C_SCL"
        },
        "serial": {
          "tx": "PC_12",
          "rx": "PF_6"
        }
      }
    }
  },
  "toolchain": "CMake/toolchain.cmake",
  "debug": [
    "valinor",
    "--target",
    "stm32f407vg",
    "$program"
  ],
  "scripts": {
    "debug": [
      "valinor",
      "--target",
      "stm32f407vg",
      "$program"
    ],
    "test": [
      "mbed_test_wrapper",
      "--target",
      "STM32F4-DISCO",
      "$program"
    ],
    "start": [
      "bash",
      "$PWD/yotta_targets/stm32f407-disco-gcc/openocd/flash.sh",
      "stm32f4_flash $program"
    ]
  }
}
